[user]
    name = Johnathon Schultz
    email = johnathon.schultz@gmail.com

[core]
    editor = vim
    whitespace = trailing-space,space-before-tab,tab-in-indent

[alias]
    ap = add -p
    gl = log --graph --decorate --pretty=oneline --abbrev-commit --all --date-order
    glb = log --graph --decorate --pretty=oneline --abbrev-commit
    gla = !trap "" 13 && git log --graph --oneline --decorate --all $(git reflog | awk '{print $1}')
    b = branch
    d = diff
    dc = diff --cached
    st = status -sb
    ci = commit
    co = checkout
    up = checkout
    ff = merge --ff-only

[merge]
    stat = False
    tool = kdiff3

#[mergetool "kdiff3"]
#    path = /Users/pkoch/Applications/kdiff3.app/Contents/MacOS/kdiff3

[color]
    ui = auto

[color "branch"]
    current = green reverse
    local = green
    remote = red

[push]
    default = current

[grep]
    lineNumber = true

[mergetool]
    prompt = false

[rerere]
    enabled = true
    autoupdate = true

[rebase]
    autosquash = true
